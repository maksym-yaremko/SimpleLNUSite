@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2 class="header"><b>The list of roles</b></h2>
<table class="table">
    <a asp-controller="Roles" asp-action="Create"><button class="btn btn-success">Create Role</button></a>
    <a asp-controller="Roles" asp-action="UserList"><button class="btn btn-success">List of Users</button></a>

    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<style>
    .header {
        text-align: center;
        font-family: Courier;
        color: cadetblue;
        font-size: 50px;
    }

    body {
        background: #e0e0e0;
        font-family: 'Roboto', sans-serif;
    }
</style>